    expect(wrapper.findComponent({ ref: 'new{{namePascalCase}}Header' }).exists()).toBeFalsy()
    expect(wrapper.findComponent({ ref: 'edit{{namePascalCase}}Header' }).exists()).toBeTruthy()
    expect(wrapper.findComponent({ ref: '{{nameCamelCase}}Form' }).exists()).toBeTruthy()
