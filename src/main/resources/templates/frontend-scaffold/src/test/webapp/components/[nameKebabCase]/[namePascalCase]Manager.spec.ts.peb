    createComponent()
    await flushPromises()

    expect(wrapper.findComponent({ ref: 'new{{namePascalCase}}Header' }).exists()).toBeFalsy()
    expect(wrapper.findComponent({ ref: 'edit{{namePascalCase}}Header' }).exists()).toBeFalsy()
    expect(wrapper.findComponent({ ref: '{{nameCamelCase}}Form' }).exists()).toBeFalsy()

    await wrapper.findComponent({ ref: 'openNewFormBtn' }).trigger('click')

    expect(wrapper.findComponent({ ref: 'new{{namePascalCase}}Header' }).exists()).toBeTruthy()
    expect(wrapper.findComponent({ ref: 'edit{{namePascalCase}}Header' }).exists()).toBeFalsy()
    expect(wrapper.findComponent({ ref: '{{nameCamelCase}}Form' }).exists()).toBeTruthy()
  })

