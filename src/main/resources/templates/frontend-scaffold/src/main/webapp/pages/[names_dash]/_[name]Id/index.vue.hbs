{{=<% %>=}}<template>
  <div>
    <h1>Show <%Name%></h1>

    <<%Name%>Details :<%name_dash%>-id="this.$route.params.<%name%>Id" />

    <n-link to="/<%names_dash%>">
      List of <%Names%>
    </n-link>

    <button
      ref="edit<%Name%>Btn"
      @click="openForm"
    >
      Edit <%Name%>
    </button>

    <h2
      v-if="<%name%>FormVisible && selected<%Name%>Id"
      ref="edit<%Name%>Header"
    >
      Edit <%Name%> {{ selected<%Name%>Id }}
    </h2>

    <<%Name%>Form
      v-if="<%name%>FormVisible"
      ref="<%name%>Form"
      :key="selected<%Name%>Id"
      :<%name%>-id="selected<%Name%>Id"
      @save:<%name%>="closeForm"
      @close:<%name%>Form="closeForm"
    />
  </div>
</template>

<script lang="ts">
import <%Name%>Details from '@/components/<%name_dash%>/<%Name%>Details.vue'
import <%Name%>Form from '@/components/<%name_dash%>/<%Name%>Form.vue'
import Vue from 'vue'
import Component from 'nuxt-class-component'

@Component({
  components: { <%Name%>Details, <%Name%>Form }
})
export default class extends Vue {
  <%name%>FormVisible = false
  selected<%Name%>Id: number | null = null

  openForm () {
    this.<%name%>FormVisible = true
    this.selected<%Name%>Id = parseInt(this.$route.params.<%name%>Id)
  }

  closeForm () {
    this.<%name%>FormVisible = false
    this.selected<%Name%>Id = null
  }
}
</script><%={{ }}=%>
