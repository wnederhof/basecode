{{=<% %>=}}import { shallowMount, createLocalVue, Wrapper } from '@vue/test-utils'
import flushPromises from 'flush-promises'
import VueApollo from 'vue-apollo'
import <%Name%>Editor from './index.vue'

const localVue = createLocalVue()
localVue.use(VueApollo)

describe('<%Name%>Editor', () => {
  let wrapper: Wrapper<any>

  const createComponent = () => {
    wrapper = shallowMount(<%Name%>Editor, {
      localVue,
      propsData: { <%name%>Id: 1 },
      stubs: {
        <%Name%>List: true,
        <%Name%>Form: true
      }
    })
  }

  afterEach(() => {
    wrapper.destroy()
  })

  it('is a Vue instance', () => {
    createComponent()
    expect(wrapper.vm).toBeTruthy()
  })

  it('opens <%name%> form when new is pressed', async () => {
    createComponent()
    await flushPromises()

    expect(wrapper.findComponent({ ref: 'editor-new-<%name%>-header' }).exists()).toBeFalsy()
    expect(wrapper.findComponent({ ref: 'editor-edit-<%name%>-header' }).exists()).toBeFalsy()
    expect(wrapper.findComponent({ ref: 'editor-<%name%>-form' }).exists()).toBeFalsy()

    await wrapper.vm.handleNew<%Name%>()

    expect(wrapper.findComponent({ ref: 'editor-new-<%name%>-header' }).exists()).toBeTruthy()
    expect(wrapper.findComponent({ ref: 'editor-edit-<%name%>-header' }).exists()).toBeFalsy()
    expect(wrapper.findComponent({ ref: 'editor-<%name%>-form' }).exists()).toBeTruthy()
  })

  it('opens <%name%> form when edit is pressed', async () => {
    createComponent()
    await flushPromises()

    expect(wrapper.findComponent({ ref: 'editor-new-<%name%>-header' }).exists()).toBeFalsy()
    expect(wrapper.findComponent({ ref: 'editor-edit-<%name%>-header' }).exists()).toBeFalsy()
    expect(wrapper.findComponent({ ref: 'editor-<%name%>-form' }).exists()).toBeFalsy()

    await wrapper.vm.handleEdit<%Name%>(1)

    expect(wrapper.findComponent({ ref: 'editor-new-<%name%>-header' }).exists()).toBeFalsy()
    expect(wrapper.findComponent({ ref: 'editor-edit-<%name%>-header' }).exists()).toBeTruthy()
    expect(wrapper.findComponent({ ref: 'editor-<%name%>-form' }).exists()).toBeTruthy()
  })

  it('closes when close is pressed', async () => {
    createComponent()
    await flushPromises()
    await wrapper.vm.handleEdit<%Name%>(1)
    await wrapper.vm.handleCancel<%Name%>()

    expect(wrapper.findComponent({ ref: 'editor-new-<%name%>-header' }).exists()).toBeFalsy()
    expect(wrapper.findComponent({ ref: 'editor-edit-<%name%>-header' }).exists()).toBeFalsy()
    expect(wrapper.findComponent({ ref: 'editor-<%name%>-form' }).exists()).toBeFalsy()
  })

  it('closes when save is pressed', async () => {
    createComponent()
    await flushPromises()
    await wrapper.vm.handleEdit<%Name%>(1)
    await wrapper.vm.handleSave<%Name%>()

    expect(wrapper.findComponent({ ref: 'editor-new-<%name%>-header' }).exists()).toBeFalsy()
    expect(wrapper.findComponent({ ref: 'editor-edit-<%name%>-header' }).exists()).toBeFalsy()
    expect(wrapper.findComponent({ ref: 'editor-<%name%>-form' }).exists()).toBeFalsy()
  })
})<%={{ }}=%>
