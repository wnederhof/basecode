{
  "compilerOptions": {
    "sourceRoot": "src/main/webapp",
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./src/main/webapp/*"
      ],
      "@/*": [
        "./src/main/webapp/*"
      ]
    },
    "types": [
      "@types/node",
      "@nuxt/types",
      "vue-apollo"
    ]
  },
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist"
  ]
}
